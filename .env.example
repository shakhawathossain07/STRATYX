# GRID API Configuration
# Get your API key from https://grid.gg/
VITE_GRID_API_KEY=your_grid_api_key_here

# GRID API Endpoints (official endpoints)
VITE_GRID_CENTRAL_DATA_URL=https://api.grid.gg/central-data/graphql
VITE_GRID_SERIES_STATE_URL=https://api.grid.gg/series-state/graphql
VITE_GRID_SERIES_EVENTS_URL=wss://api.grid.gg/series-events/v1

# Application Configuration
VITE_APP_NAME=STRATYX
VITE_APP_VERSION=0.1.0

# Feature Flags
VITE_ENABLE_LIVE_MODE=true
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_COUNTERFACTUAL_SIM=true

# Analytics & Monitoring (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=

# Strategy Debt Configuration
VITE_DEBT_CRITICAL_THRESHOLD=75
VITE_DEBT_WARNING_THRESHOLD=50

# Win Probability Model Configuration
VITE_WINPROB_UPDATE_INTERVAL=5000
VITE_WINPROB_CONFIDENCE_MIN=0.3

# Pattern Detection Configuration
VITE_PATTERN_MIN_OCCURRENCES=3
VITE_PATTERN_MIN_CONFIDENCE=0.65

# UI Configuration
VITE_THEME=dark
VITE_ANIMATION_DURATION=300
